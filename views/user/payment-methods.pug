extends ../userLayout

block content-head
    title Payment Methods - Travel Journal

block content-body
  .main-content
    .page-header
      h1 Payment Methods
      p Manage your saved payment methods for quick and secure bookings.

    .payment-methods
      .payment-card
        .card-info
          h3 **** **** **** 1234
          p Visa ending in 1234
          p Expires: 12/26
        .card-actions
          button.btn-secondary Edit
          button.btn-danger Remove

      .payment-card
        .card-info
          h3 **** **** **** 5678
          p Mastercard ending in 5678
          p Expires: 08/25
        .card-actions
          button.btn-secondary Edit
          button.btn-danger Remove

      .add-payment
        button.btn-primary Add New Payment Method

    .payment-form(style="display: none;")
      form(action="/user/payment-methods", method="POST")
        .form-group
          label(for="card-number") Card Number
          input(type="text", id="card-number", name="card-number", placeholder="1234 5678 9012 3456", required)

        .form-group
          label(for="expiry-date") Expiry Date
          input(type="text", id="expiry-date", name="expiry-date", placeholder="MM/YY", required)

        .form-group
          label(for="cvv") CVV
          input(type="text", id="cvv", name="cvv", placeholder="123", required)

        .form-group
          label(for="cardholder-name") Cardholder Name
          input(type="text", id="cardholder-name", name="cardholder-name", placeholder="John Doe", required)

        button.btn-primary(type="submit") Save Payment Method

